<h1><%=  %> Answers</h1>

<%= form_for(@ufc) do |f| %>
  <% @users.each do |user| -%>
  <h3><%= user.name %></h3>
  <table>
    <thead>
      <tr>
        <td>Questions</td>
        <td>Answer</td>
      </tr>
    </thead>
    <tbody>
      <% @fights.each do |fight| -%>
      <tr>
        <%=  :fighter_one_name %>
    <%=  :fighter_one_image %>
    <%= :fighter_two_name %>
    <%=  :fighter_two_image %>
        <td>
        <%= f.fields_for :fights, fight do |q| -%>
          <%= q.fields_for :predictions, fight.predictions.find_or_initialize_by(current_user.id) do |a| -%>
          
    
    <%= a.text_area :fighter %>
    <%= a.text_area :how %>
    <%= a.text_area :when %>
            <%= a.hidden_field :user_id, :value => current_user.id %>
          <% end -%>
        <% end -%>
        </td>
      </tr>
      <% end -%>
    </tbody>
  </table>
  <% end -%>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end -%>
